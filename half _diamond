#include <stdio.h>
#include <string.h>
#include <math.h>
#include <stdlib.h>

int main() {
        int i,j,k=0,n;
    scanf("%d",&n);
    for(i=1;i<=2*n-1;i++)
    {
        i<=n ? k++ : k--;
        for(j=1;j<=n;j++)    
        {
            if(j<=k)
            printf("*");
            else 
            printf(" ");      
        }
        printf("\n");
    }

    /* Enter your code here. Read input from STDIN. Print output to STDOUT */    
    return 0;
}
